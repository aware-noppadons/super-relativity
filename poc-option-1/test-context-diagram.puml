@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title Application Context Diagram - Test API

System(testapi, "Test API", "Main test application")
System_Ext(activitydb, "Activity DB", "Activity tracking database")
System_Ext(taskmaster, "Taskmaster", "Task orchestration service")
System_Ext(notification, "Notification Service", "Sends notifications")

' Data flow relationships
Rel(testapi, activitydb, "push data", "REST API")
Rel(testapi, taskmaster, "call REST", "HTTP/JSON")
Rel(taskmaster, testapi, "pull data", "REST API")
Rel(notification, testapi, "pull data", "Polling")
Rel(testapi, notification, "set activity", "REST API")

@enduml
